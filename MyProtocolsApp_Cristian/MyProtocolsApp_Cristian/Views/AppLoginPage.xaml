<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyProtocolsApp_Cristian.Views.AppLoginPage" 
             Shell.NavBarIsVisible="False" 
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="LightGray"
             BackgroundImageSource="MicrosoftTeams-image.png">  
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Padding="50, 25, 50, 25">
            
            <Entry x:Name="TxtUserName" Placeholder="Email" FontSize =" 30" Keyboard="Email"/>
            <Entry x:Name="TxtPassword" Placeholder="Password" FontSize="30" Keyboard="Default" IsPassword = "True"/>

            <Switch x:Name="SwShowPassword" IsToggled="False" Toggled="SwShowPassword_Toggled"/>

            <Button x:Name="BtnLogin" Text="LOGIN" Background="Green" CornerRadius="15"/>
            <Button x:Name="BtnSignUp" Text="Sign Up" Background="Blue" CornerRadius="15" />

            <Label x:Name="LblPasswordRecovery" Text="Password Recovery..."  />


        </StackLayout>
    </ContentPage.Content>
</ContentPage>